<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcomeUserTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Welcome"
        android:textSize="56sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/goToWorkoutInfoPage"
        android:layout_width="223dp"
        android:layout_height="88dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="Workouts"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeUserTextView" />

    <Button
        android:id="@+id/goToGymLogPage"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Gym Log"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/goToFoodLogPage"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToWorkoutInfoPage" />

    <Button
        android:id="@+id/goToFoodLogPage"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:text="Food Log"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToWorkoutInfoPage" />

    <Button
        android:id="@+id/goToAdminPage"
        android:layout_width="207dp"
        android:layout_height="71dp"
        android:layout_marginBottom="44dp"
        android:gravity="center"
        android:text="Admin Hub"
        android:textSize="25sp"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goToGymLogPage"
        app:layout_constraintVertical_bias="0.367" />

    <Button
        android:id="@+id/returnBackButton"
        android:layout_width="170dp"
        android:layout_height="68dp"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:text="Return"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>