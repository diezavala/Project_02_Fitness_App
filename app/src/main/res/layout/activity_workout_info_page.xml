<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutInfoPage">


    <TextView
        android:id="@+id/helpfulInfoWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Workout Splits You Can Try"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/splitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Click"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextSplitButton" />

    <TextView
        android:id="@+id/workoutInfoText"
        android:layout_width="384dp"
        android:layout_height="374dp"
        android:layout_marginTop="16dp"
        android:text="Press The Button For A Workout Split "
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splitName"
        app:layout_constraintVertical_bias="0.181"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/previousSplitButton"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginStart="104dp"
        android:gravity="center"
        android:text="Back"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helpfulInfoWelcome" />

    <Button
        android:id="@+id/nextSplitButton"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_marginEnd="104dp"
        android:gravity="center"
        android:text="Next"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helpfulInfoWelcome" />


</androidx.constraintlayout.widget.ConstraintLayout>